# Local Development Environment Variables

# Socket Server URL (Local Development)
SOCKET_SERVER_URL=http://localhost:3000

# WebRTC Configuration
WEBRTC_STUN_SERVERS=stun:stun.l.google.com:19302,stun:stun1.l.google.com:19302,stun:stun2.l.google.com:19302

# TURN Server Configuration (Optional for local development)
# TURN_SERVER_URL=
# TURN_USERNAME=
# TURN_CREDENTIAL=

# App Configuration
APP_NAME=VideoCallingApp
APP_VERSION=0.0.1
ENVIRONMENT=development

# Debug Configuration
DEBUG=true
LOG_LEVEL=debug

# Media Configuration
DEFAULT_VIDEO_WIDTH=1280
DEFAULT_VIDEO_HEIGHT=720
DEFAULT_VIDEO_FRAME_RATE=30
DEFAULT_SCREEN_WIDTH=1920
DEFAULT_SCREEN_HEIGHT=1080

# Socket Configuration
SOCKET_TIMEOUT=20000
SOCKET_RECONNECTION_ATTEMPTS=5
SOCKET_RECONNECTION_DELAY=1000
SOCKET_RECONNECTION_DELAY_MAX=5000

# Feature Flags
ENABLE_SCREEN_SHARING=true
ENABLE_CHAT=true
ENABLE_PARTICIPANT_LIST=true
